{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug node",
      "type": "node",
      "request": "attach",
      "port": "${input:port}",
      "restart": true,
      "stopOnEntry": false,
      "protocol": "inspector"
    },
    {
      "name": "Debug angular",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Debug jest",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": ["test", "${input:project}", "--runInBand=true", "--codeCoverage=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "Debug port"
    },
    {
      "id": "project",
      "type": "promptString",
      "description": "project name"
    }
  ]
}
