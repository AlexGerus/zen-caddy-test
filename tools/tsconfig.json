{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./node_modules", "./tmp"]
}
