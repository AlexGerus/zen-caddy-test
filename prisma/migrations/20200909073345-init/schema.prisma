datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  previewFeatures = ["insensitiveFilters"]
}

model User {
  id        String    @default(cuid()) @id
  createdAt DateTime  @default(now())
  email     String    @unique
  firstName String?
  lastName  String?
  password  String
  roles     String[]
}

model Role {
  id        String    @default(cuid()) @id
  name      String    @unique
}
